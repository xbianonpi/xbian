# Show a normal dialog (messagebox)
# $1 Title
# $2 Ok label
# $3 Text
# $4 (optional) Height
# $5 (optional) Width
showdialog() {
	# Default width and height
	HEIGHT=7
	IMSGHGHT=$(echo -e "$3" | wc -l);
	if [ $HEIGHT -eq $IMSGHGHT ]; then
		HEIGHT=$(($IMSGHGHT+4));
	fi
	
	WIDTH=55
	# Overridden width and height
	if [ $# -gt 3 ]; then
		HEIGHT=$4
	fi
	if [ $# -gt 4 ]; then
		WIDTH=$5
	fi
	# Show messagebox
	dialog \
		--backtitle "$BACKTITLE" \
		--title " $1 " \
		--ok-label "$2" \
		--msgbox "$3" $HEIGHT $WIDTH
}

# Show a information box
# $1 Title
# $2 Text
# $3 (optional) Height
# $4 (optional) Width
showinfo() {
	# Default width and height
	HEIGHT=7
	IMSGHGHT=$(echo -e "$3" | wc -l);
	if [ $HEIGHT -eq $IMSGHGHT ]; then
		HEIGHT=$(($IMSGHGHT+4));
	fi
	
	WIDTH=55
	# Overridden width and height
	if [ $# -gt 2 ]; then
		HEIGHT=$3
	fi
	if [ $# -gt 3 ]; then
		WIDTH=$4
	fi
	# Show messagebox
	dialog \
		--backtitle "$BACKTITLE" \
		--title " $1 " \
		--infobox "$2" $HEIGHT $WIDTH
}

# Show a yes/no dialog
# $1 Title
# $2 Text
# $3 (optional) Height
# $4 (optional) Width
# $5 (optional) Yes label
# $6 (optional) No Label
showyesno() {
	YESLABEL="Yes"
	NOLABEL="No"

	# Default width and height
	HEIGHT=7
	IMSGHGHT=$(echo -e "$3" | wc -l);
	if [ $HEIGHT -eq $IMSGHGHT ]; then
		HEIGHT=$(($IMSGHGHT+4));
	fi
	
	WIDTH=55
	# Overridden width and height
	if [ $# -gt 2 ]; then
		HEIGHT=$3
	fi
	if [ $# -gt 3 ]; then
		WIDTH=$4
	fi
	if [ $# -gt 4 ]; then
		YESLABEL=$5
	fi
	if [ $# -gt 5 ]; then
		NOLABEL=$6
	fi
	# Show yes/no dialog
	dialog \
		--backtitle "$BACKTITLE" \
		--title " $1 " \
		--yes-label $YESLABEL \
		--no-label $NOLABEL \
		--yesno "$2" $HEIGHT $WIDTH
}

#Show menu
# $1 Title
# $2-n Menu items
showmenu () {
	TITLE=" $1 "
	shift
	ROWS=$(($#/2))
	HEIGHT=$(($ROWS+6))
	RETURN=$( \
		dialog \
			--no-kill \
			--backtitle "$BACKTITLE" \
			--title "$TITLE" \
			--ok-label Select \
			--colors \
			--cancel-label Return \
			--menu '' $HEIGHT 80 $ROWS \
			"$@" 3>&1 1>&2 2>&3)
}

#Show menu with description text
# $1 Title
# $2 Descriptive text
# $3-n Menu items
showmenudesc () {
        TITLE=" $1 "
        TEXT="$2"
        shift;shift;
        ROWS=$(($#/2))
        HEIGHT=$(($ROWS+10))
        RETURN=$( \
                dialog \
                        --no-kill \
                        --colors \
                        --backtitle "$BACKTITLE" \
                        --title "$TITLE" \
                        --ok-label Select \
                        --cancel-label Return \
                        --menu "$TEXT" \
                        $HEIGHT 80 $ROWS \
                        "$@" 3>&1 1>&2 2>&3)
}

# Catch-all for not implemented functions
notimplementedyet() {
	showdialog 	"Config > *" \
			"Close" \
			"\n\n             Not implemented yet"
	mainmenu;
}
